<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ARS_FE</title>

    <link rel="stylesheet" href="~/css/open-iconic-bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/animate.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/magnific-popup.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/aos.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/ionicons.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/bootstrap-datepicker.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/jquery.timepicker.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/flaticon.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/icomoon.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">

    <style>
        html, body {
            height: 100%; /* Chiều cao đầy đủ */
            margin: 0; /* Loại bỏ margin */
            display: flex; /* Sử dụng flexbox */
            flex-direction: column; /* Hướng dọc */
        }

        #ftco-navbar {
            background-color: #343a40; /* Nền tối */
            opacity: 0.9; /* Độ trong suốt */
        }

        .navbar-brand {
            font-weight: bold;
            color: #ffffff !important;
        }

        .nav-link {
            color: #ffffff !important;
        }

            .nav-link:hover {
                color: #ffc107 !important; /* Màu khi hover */
            }

        /* Main container styles */
        .container {
            flex: 1; /* Cho phép container mở rộng để chiếm không gian còn lại */
            margin-top: 20px; /* Khoảng cách trên */
        }

        /* Footer styles */
        footer {
            background-color: #343a40;
            color: #ffffff;
            padding: 20px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" id="ftco-navbar">
            <div class="container">
                <a asp-page="/Staff/Index" class="navbar-brand">
                    Vacation<span>Travel Agency</span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="oi oi-menu"></span> Menu
                </button>

                <div class="collapse navbar-collapse" id="ftco-nav">
                    <ul class="navbar-nav ml-auto">
                        @if (Context.Session.GetString("Username") != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-danger">Welcome @Context.Session.GetString("Username")</span>
                            </li>
                        }

                        @{
                            var token = Context.Session.GetString("JWToken");
                            if (token != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-danger" asp-area="" asp-page="/SignOut">Sign Out</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <p>&copy; 2024 Vacation Travel Agency. All Rights Reserved.</p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
