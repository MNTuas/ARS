@page
@model ARS_FE.Pages.Staff.AirplaneManagement.DetailsModel

@{
    Layout = "_LayoutManage";
    ViewData["Title"] = "Airplane Details";
}

<h1>Airplane Details</h1>

<div>
    <h4>Airplane Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Airplane.CodeNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Airplane.CodeNumber)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Airplane.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Airplane.Status)
        </dd>
    </dl>
</div>

<h4>Flights Information</h4>
<hr />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Flight Number</th>
            <th>Airlines</th>
            <th>Departure Time</th>
            <th>Arrival Time</th>
            <th>Duration (minutes)</th>
            <th>Status</th>
            <th>From</th>
            <th>To</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Airplane.Flights != null && Model.Airplane.Flights.Any())
        {
            foreach (var flight in Model.Airplane.Flights)
            {
                <tr>
                    <td>@flight.FlightNumber</td>
                    <td>@flight.Airlines ?? "Unknown"</td>
                    <td>@flight.DepartureTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@flight.ArrivalTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@flight.Duration</td>
                    <td>@flight.Status</td>
                    <td>@flight.FromName ?? flight.From</td>
                    <td>@flight.ToName ?? flight.To</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8">No flight information available.</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Airplane.Id" class="btn btn-primary">Edit</a> |
    <a asp-page="./Index" asp-route-id="" class="btn btn-secondary">Back to List</a>
</div>
