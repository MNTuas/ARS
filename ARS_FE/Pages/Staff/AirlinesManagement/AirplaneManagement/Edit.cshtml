@page
@model ARS_FE.Pages.Staff.AirplaneManagement.EditModel
@{
    Layout = "_LayoutManage";
    ViewData["Title"] = "Edit Airplane";
}

<h4>Edit Airplane</h4>
<hr />
<form method="post">
    <div class="form-group">
        <label asp-for="UpdateAirplane.CodeNumber" class="control-label">Airplane Code Number</label>
        <input asp-for="UpdateAirplane.CodeNumber" class="form-control" readonly />
        <span asp-validation-for="UpdateAirplane.CodeNumber" class="text-danger"></span>
    </div>

    <h5>Airplane Seats</h5>
    <div id="seat-list">
        @for (int i = 0; i < Model.UpdateAirplane.AirplaneSeatRequest.Count; i++)
        {
            <div class="form-group">
                <label class="control-label">Seat Class</label>
                <!-- Text field hiển thị tên của SeatClass từ ViewData -->
                <input type="text" class="form-control"
                       value="@(ViewData["SeatClassesNames"] is Dictionary<string, string> seatClassesNames
                                && seatClassesNames.ContainsKey(Model.UpdateAirplane.AirplaneSeatRequest[i].SeatClassId)
                                ? seatClassesNames[Model.UpdateAirplane.AirplaneSeatRequest[i].SeatClassId]
                                : "Unknown")"
                       readonly />
                <!-- Hidden field để giữ SeatClassId cho POST -->
                <input type="hidden" asp-for="UpdateAirplane.AirplaneSeatRequest[i].SeatClassId" />
            </div>

            <div class="form-group">
                <label asp-for="UpdateAirplane.AirplaneSeatRequest[i].SeatCount" class="control-label">Seat Count</label>
                <input asp-for="UpdateAirplane.AirplaneSeatRequest[i].SeatCount" class="form-control" />
                <span asp-validation-for="UpdateAirplane.AirplaneSeatRequest[i].SeatCount" class="text-danger"></span>
            </div>
            <hr />
        }
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
