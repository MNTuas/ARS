@page
@model ARS_FE.Pages.Staff.AirplaneManagement.EditModel

@{
    Layout = "_LayoutManage";
    ViewData["Title"] = "Edit";
}

<h1>Edit Airplane</h1>

<h4>Airplane Information</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- CodeNumber -->
            <div class="form-group">
                <label asp-for="UpdateAirplane.CodeNumber" class="control-label"></label>
                <input asp-for="UpdateAirplane.CodeNumber" class="form-control" />
                <span asp-validation-for="UpdateAirplane.CodeNumber" class="text-danger"></span>
            </div>

            <!-- Airplane Seats -->
            <h4>Airplane Seats</h4>
            <hr />
            <div id="seat-list">
                @for (int i = 0; i < Model.UpdateAirplane.AirplaneSeatRequest.Count; i++)
                {
                    <div class="form-group">
                        <label asp-for="UpdateAirplane.AirplaneSeatRequest[i].SeatClassId" class="control-label">Seat Class</label>
                        <select asp-for="UpdateAirplane.AirplaneSeatRequest[i].SeatClassId" class="form-control" asp-items="ViewBag.SeatClasses"></select>
                        <span asp-validation-for="UpdateAirplane.AirplaneSeatRequest[i].SeatClassId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UpdateAirplane.AirplaneSeatRequest[i].SeatCount" class="control-label">Seat Count</label>
                        <input asp-for="UpdateAirplane.AirplaneSeatRequest[i].SeatCount" class="form-control" />
                        <span asp-validation-for="UpdateAirplane.AirplaneSeatRequest[i].SeatCount" class="text-danger"></span>
                    </div>
                    <hr />
                }
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
