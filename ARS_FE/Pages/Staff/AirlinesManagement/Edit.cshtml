@page
@model ARS_FE.Pages.Staff.AirlinesManagement.EditModel

@{
    Layout = "_LayoutManage";
    ViewData["Title"] = "Edit Airlines";
}

<div class="container mt-4">
    <h1 class="text-center">Edit Airlines</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Airline.Id" />
                <input type="hidden" asp-for="Airline.Status" />

                <div class="form-group">
                    <label asp-for="Airline.Name" class="control-label"></label>
                    <input asp-for="Airline.Name" class="form-control" />
                    <span asp-validation-for="Airline.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Airline.Code" class="control-label"></label>
                    <input asp-for="Airline.Code" class="form-control" />
                    <span asp-validation-for="Airline.Code" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-page="./Index" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
