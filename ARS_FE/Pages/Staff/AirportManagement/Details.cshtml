@page
@model ARS_FE.Pages.Staff.AirportManagement.DetailsModel

@{
    Layout = "_LayoutManage";
    ViewData["Title"] = "Airport Details";
}

<div class="container mt-4">
    <h1 class="text-center">Airport Details</h1>

    <div class="card mb-4">
        <div class="card-header">
            <h4>@Html.DisplayFor(model => model.Airport.Name)</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Airport Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Airport.Name)</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Airport.Status)</dd>
            </dl>
        </div>
    </div>

    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Airport.Id" class="btn btn-warning">Edit Airport</a>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
