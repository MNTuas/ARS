@page
@model ARS_FE.Pages.Staff.FlightClassManagement.EditModel
@{
    Layout = "_LayoutManage";
    ViewData["Title"] = "Edit Flight Class";
}

<h1>Edit Flight Class</h1>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="FlightClassRequest.FlightId" class="control-label"></label>
                    <input asp-for="FlightClassRequest.FlightId" class="form-control" />
                    <span asp-validation-for="FlightClassRequest.FlightId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FlightClassRequest.Class" class="control-label"></label>
                    <input asp-for="FlightClassRequest.Class" class="form-control" />
                    <span asp-validation-for="FlightClassRequest.Class" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FlightClassRequest.Quantity" class="control-label"></label>
                    <input asp-for="FlightClassRequest.Quantity" class="form-control" type="number" min="1" />
                    <span asp-validation-for="FlightClassRequest.Quantity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FlightClassRequest.Price" class="control-label"></label>
                    <input asp-for="FlightClassRequest.Price" class="form-control" type="number" step="0.01" min="0.01" />
                    <span asp-validation-for="FlightClassRequest.Price" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-page="./Index" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}