@page
@model ARS_FE.Pages.Staff.FlightClassManagement.IndexModel

@{
    Layout = "_LayoutManage";
    ViewData["Title"] = "FlightClasses";

    var prevDisabled = !Model.FlightClass.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.FlightClass.HasNextPage ? "disabled" : "";

    var minPage = Math.Max(1, Model.FlightClass.PageIndex - 2);
    var maxPage = Math.Min(minPage + 4, Model.FlightClass.TotalPages);

    var currentPageIndex = Model.FlightClass.PageIndex;
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Flight Class Management</h1>

    <div class="text-right mb-3">
        <a asp-page="Create" class="btn btn-primary">Create Flight Class</a>
    </div>

    @if (Model.FlightClass != null && Model.FlightClass.Any())
    {
        <table class="table table-hover table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FlightClass[0].Class)</th>
                    <th class="text-center">Quantity</th>
                    <th class="text-center">Price</th>
                    <th class="text-center">Flight</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.FlightClass)
                {
                    <tr>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.FlightId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Class)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.Price)</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mr-2">Edit</a>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mr-2">Details</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Pagination section -->
        <div class="row">
            <div class="col">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center m-0">
                        <li class="page-item @prevDisabled">
                            <a class="page-link" aria-label="Previous"
                               asp-page="./Index"
                               asp-route-pageIndex="@(currentPageIndex - 1)">
                                <span aria-hidden="true"><i class="bi bi-arrow-left"></i> Previous</span>
                            </a>
                        </li>
                        @for (var i = minPage; i <= maxPage; i++)
                        {
                            <li class="page-item @(currentPageIndex == i ? "active" : "")">
                                <a class="page-link" asp-page="./Index"
                                   asp-route-pageIndex="@i">@i</a>
                            </li>
                        }
                        <li class="page-item @nextDisabled">
                            <a class="page-link" aria-label="Next"
                               asp-page="./Index"
                               asp-route-pageIndex="@(currentPageIndex + 1)">
                                <span aria-hidden="true">Next <i class="bi bi-arrow-right"></i></span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    }
    else
    {
        <p class="text-center">No flight classes available.</p>
    }
</div>