@page
@model ARS_FE.Pages.UserPage.BookingManager.CreateRefundBankAccountModel

@{
    ViewData["Title"] = "Create Refund Bank Account";
    Layout = "_LayoutUser";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4>Create Refund Bank Account</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="RefundBankAccount.BookingId" />

                <div class="mb-3">
                    <label asp-for="RefundBankAccount.AccountName" class="form-label fw-bold"></label>
                    <input asp-for="RefundBankAccount.AccountName" class="form-control" />
                    <span asp-validation-for="RefundBankAccount.AccountName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RefundBankAccount.AccountNumber" class="form-label fw-bold"></label>
                    <input asp-for="RefundBankAccount.AccountNumber" class="form-control" />
                    <span asp-validation-for="RefundBankAccount.AccountNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RefundBankAccount.BankName" class="form-label fw-bold"></label>
                    <input asp-for="RefundBankAccount.BankName" class="form-control" />
                    <span asp-validation-for="RefundBankAccount.BankName" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-page="BookingList" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
