@page
@model ARS_FE.Pages.UserPage.BookingManager.CreateRefundBankAccountModel

@{
    ViewData["Title"] = "Create Refund Bank Account";
    Layout = "_LayoutUser";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4>Create Refund Bank Account</h4>
        </div>
        <div class="card-body">

            <!-- Cancellation Policy Information -->
            <div class="alert alert-info">
                <h5>Cancellation Policy</h5>
                <p>If you cancel your booking:</p>
                <ul>
                    <li>More than 7 days before the flight, you will receive a 100% refund.</li>
                    <li>Between 1 and 7 days before the flight, you will receive a 90% refund.</li>
                    <li>Less than 1 day before the flight, you will receive a 70% refund.</li>
                </ul>
                <p>Please confirm that you understand the cancellation policy to continue.</p>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="policyAgreement" required />
                    <label class="form-check-label" for="policyAgreement">
                        I agree to the terms of the cancellation policy.
                    </label>
                </div>
            </div>

            <!-- Refund Bank Account Form -->
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="RefundBankAccount.BookingId" />

                <div class="mb-3">
                    <label asp-for="RefundBankAccount.AccountName" class="form-label fw-bold"></label>
                    <input asp-for="RefundBankAccount.AccountName" class="form-control" />
                    <span asp-validation-for="RefundBankAccount.AccountName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RefundBankAccount.AccountNumber" class="form-label fw-bold"></label>
                    <input asp-for="RefundBankAccount.AccountNumber" class="form-control" />
                    <span asp-validation-for="RefundBankAccount.AccountNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RefundBankAccount.BankName" class="form-label fw-bold"></label>
                    <input asp-for="RefundBankAccount.BankName" class="form-control" />
                    <span asp-validation-for="RefundBankAccount.BankName" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-page="BookingList" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary" disabled id="submitButton">
                        <i class="bi bi-plus-circle"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById("policyAgreement").addEventListener("change", function() {
            document.getElementById("submitButton").disabled = !this.checked;
        });
    </script>
}
