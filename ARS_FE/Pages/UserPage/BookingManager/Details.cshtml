@page
@model ARS_FE.Pages.UserPage.BookingManager.DetailsModel
@{
    ViewData["Title"] = "Ticket Details";
    Layout = "_LayoutUser";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Ticket Details</h2>

    @if (Model.Tickets == null || !Model.Tickets.Any())
    {
        <div class="alert alert-info text-center">
            No tickets found for this booking.
        </div>
    }
    else
    {
        <table class="table table-hover table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th class="text-center">Class</th>
                    <th class="text-center">Price</th>
                    <th class="text-center">Passenger Name</th>
                    <th class="text-center">Gender</th>
                    <th class="text-center">Date of Birth</th>
                    <th class="text-center">Country</th>
                    <th class="text-center">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model.Tickets)
                {
                    <tr>
                        <td class="text-center">@ticket.ClassName</td>
                        <td class="text-center">@ticket.ClassPrice</td>
                        <td class="text-center">@ticket.FirstName @ticket.LastName</td>
                        <td class="text-center">@ticket.Gender</td>
                        <td class="text-center">@ticket.Dob.ToString("yyyy-MM-dd")</td>
                        <td class="text-center">@ticket.Country</td>
                        <td class="text-center">@ticket.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
