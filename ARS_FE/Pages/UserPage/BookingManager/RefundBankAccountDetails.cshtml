@page
@model ARS_FE.Pages.UserPage.BookingManager.RefundBankAccountDetailsModel

@{
    ViewData["Title"] = "Refund Bank Account Details";
    Layout = "~/Pages/Shared/_LayoutUser.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Refund Bank Account Details</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 font-weight-bold">Account Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RefundBankAccount.AccountName)</dd>

                <dt class="col-sm-3 font-weight-bold">Account Number</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RefundBankAccount.AccountNumber)</dd>

                <dt class="col-sm-3 font-weight-bold">Bank Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RefundBankAccount.BankName)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-page="./BookingList" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
