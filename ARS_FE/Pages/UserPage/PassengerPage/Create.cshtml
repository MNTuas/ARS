@page
@model CreateModel
@{
    Layout = "_LayoutUser";
    ViewData["Title"] = "Add Passenger";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>Add New Passenger</h2>
            <hr />

            <form method="post" class="needs-validation">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PassengerRequest.FirstName" class="form-label">First Name</label>
                            <input asp-for="PassengerRequest.FirstName" class="form-control" />
                            <span asp-validation-for="PassengerRequest.FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PassengerRequest.LastName" class="form-label">Last Name</label>
                            <input asp-for="PassengerRequest.LastName" class="form-control" />
                            <span asp-validation-for="PassengerRequest.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PassengerRequest.Gender" class="form-label">Gender</label>
                            <select asp-for="PassengerRequest.Gender" class="form-select" asp-items="ViewBag.Genders">
                                <option value="">-- Select Gender --</option>
                            </select>
                            <span asp-validation-for="PassengerRequest.Gender" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PassengerRequest.Dob" class="form-label">Date of Birth</label>
                            <input asp-for="PassengerRequest.Dob" class="form-control" type="date" />
                            <span asp-validation-for="PassengerRequest.Dob" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PassengerRequest.Country" class="form-label">Nationality</label>
                            <select asp-for="PassengerRequest.Country" class="form-select" asp-items="ViewBag.Countries">
                                <option value="">-- Select Nationality --</option>
                            </select>
                            <span asp-validation-for="PassengerRequest.Country" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PassengerRequest.Type" class="form-label">Passenger Type</label>
                            <select asp-for="PassengerRequest.Type" class="form-select" asp-items="ViewBag.PassengerTypes">
                                <option value="">-- Select Passenger Type --</option>
                            </select>
                            <span asp-validation-for="PassengerRequest.Type" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex justify-content-between">
                            <a asp-page="./Index" class="btn btn-secondary">Back</a>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Set default date to today
        document.addEventListener('DOMContentLoaded', function () {
            var dobInput = document.querySelector('input[type="date"]');
            if (dobInput && !dobInput.value) {
                dobInput.value = new Date().toISOString().split('T')[0];
            }
        });
    </script>
}
