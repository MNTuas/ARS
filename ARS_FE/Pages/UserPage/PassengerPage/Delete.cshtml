@page
@model DeleteModel
@{
    Layout = "_LayoutUser";
    ViewData["Title"] = "Delete Passenger";
}

<div class="container mt-4">
    <h1 class="text-center">Delete Passenger</h1>
    <form method="post">
        <div class="card mb-4">
            <div class="card-header">
                <h4>Passenger Information</h4>
            </div>
            <input type="hidden" asp-for="PassengerId" />
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">First Name</dt>
                    <dd class="col-sm-9">@Model.Passenger?.FirstName</dd>
                    <dt class="col-sm-3">Last Name</dt>
                    <dd class="col-sm-9">@Model.Passenger?.LastName</dd>
                    <dt class="col-sm-3">Date of Birth</dt>
                    <dd class="col-sm-9">@Model.Passenger?.Dob.ToString("d")</dd>
                    <dt class="col-sm-3">Gender</dt>
                    <dd class="col-sm-9">@Model.Passenger?.Gender</dd>
                    <dt class="col-sm-3">Country</dt>
                    <dd class="col-sm-9">@Model.Passenger?.Country</dd>
                    <dt class="col-sm-3">Type</dt>
                    <dd class="col-sm-9">@Model.Passenger?.Type</dd>
                </dl>
            </div>
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete this account?');">
                Delete
            </button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('form').on('submit', function (e) {
                if (!$(this).valid()) {
                    e.preventDefault();
                    return false;
                }
            });
        });
    </script>
}