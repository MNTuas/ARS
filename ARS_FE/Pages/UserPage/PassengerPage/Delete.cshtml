@page
@model DeleteModel
@{
    Layout = "_LayoutUser";
    ViewData["Title"] = "Delete Passenger";
}
<h1>Delete Passenger</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="PassengerId" />

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="updatePassengerRequest.FirstName" class="form-label">First Name</label>
                        <input asp-for="updatePassengerRequest.FirstName" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="updatePassengerRequest.LastName" class="form-label">Last Name</label>
                        <input asp-for="updatePassengerRequest.LastName" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="updatePassengerRequest.Gender" class="form-label">Gender</label>
                        <input asp-for="updatePassengerRequest.Gender" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="updatePassengerRequest.Dob" class="form-label">Date of Birth</label>
                        <input asp-for="updatePassengerRequest.Dob" class="form-control" type="date" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="updatePassengerRequest.Country" class="form-label">Country</label>
                        <input asp-for="updatePassengerRequest.Country" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="updatePassengerRequest.Type" class="form-label">Passenger Type</label>
                        <input asp-for="updatePassengerRequest.Type" class="form-control" readonly />
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Delete" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete this account?');" />
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>