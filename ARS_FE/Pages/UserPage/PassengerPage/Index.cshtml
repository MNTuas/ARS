@page
@model IndexModel

@{
    Layout = "_LayoutManage";
    ViewData["Title"] = "Passenger List";
}

<div class="container">
    <!-- Passenger List Section -->
    <div class="card">
        <div class="card-header">
            <h3>Passenger Management</h3>
        </div>
        <div class="card-body">
            <div class="text-right mb-3">
                <a asp-page="Create" class="btn btn-primary">Add Passenger</a>
            </div>

            @if (Model.PassengerRespose != null && Model.PassengerRespose.Any())
            {
                <table class="table table-hover table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.PassengerRespose[0].Id)</th>
                            <th class="text-center">First Name</th>
                            <th class="text-center">Last Name</th>
                            <th class="text-center">Gender</th>
                            <th class="text-center">Date of Birth</th>
                            <th class="text-center">Country</th>
                            <th class="text-center">Passenger Type</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PassengerRespose)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                                <td>@item.Dob.ToString("dd/MM/yyyy")</td>
                                <td>@Html.DisplayFor(modelItem => item.Country)</td>
                                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mr-2">Edit</a>
                                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mr-2">Details</a>
                                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mr-2">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-center">There are no passengers yet. Please add a new passenger!</p>
            }
        </div>
    </div>
</div>
