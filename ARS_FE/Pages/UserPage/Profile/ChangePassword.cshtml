@page
@model ARS_FE.Pages.UserPage.Profile.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "_LayoutUser";
}

<div class="text-center my-4">
    <h2><strong>Change Password</strong></h2>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Status Message -->
            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div class="alert alert-success">@Model.StatusMessage</div>
            }

            <!-- Old Password Field -->
            <div class="form-group">
                <label asp-for="ChangePasswordRequest.OldPassword" class="control-label font-weight-bold"></label>
                <input asp-for="ChangePasswordRequest.OldPassword" class="form-control" type="password" />
                <span asp-validation-for="ChangePasswordRequest.OldPassword" class="text-danger"></span>
            </div>

            <!-- New Password Field -->
            <div class="form-group">
                <label asp-for="ChangePasswordRequest.NewPassword" class="control-label font-weight-bold"></label>
                <input asp-for="ChangePasswordRequest.NewPassword" class="form-control" type="password" />
                <span asp-validation-for="ChangePasswordRequest.NewPassword" class="text-danger"></span>
            </div>

            <!-- Confirm New Password Field -->
            <div class="form-group">
                <label asp-for="ChangePasswordRequest.ConfirmPassword" class="control-label font-weight-bold"></label>
                <input asp-for="ChangePasswordRequest.ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ChangePasswordRequest.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Change Password Button -->
            <div class="form-group text-center">
                <input type="submit" value="Change Password" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
